<article>
  <h2><%= t('.title') %></h2>
  <table>
    <%= render(cart.line_items) %>
    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <th class="price"><%= number_to_currency(cart.total_price) %></th>
      </tr>
    </tfoot>
  </table>
  <div class="actions">
    <%= button_to t('.empty'), cart, method: :delete, data: { confirm: t('.are_you_sure') } %>
    <%= button_to t('.checkout'), new_order_path, method: :get, class: 'checkout' %>
  </div>
</article>
